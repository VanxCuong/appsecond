<% include header %>
  <div class="content-wrapper form-register">
    <div class="container-fluid">
      <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="index.html">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Blank Page</li>
      </ol>
      <div class="row">
        <div class="col-12">
          <div class="card card-register mx-auto mt-5">
            <div class="card-header">Đăng ký tài khoản</div>
            <div class="card-body">
              <form action="/users/register/account" method="POST">
                <div class="form-group">
                    <label for="exampleInputLastName">Họ & tên:</label>
                    <input class="form-control" name="fullname" required id="exampleInputLastName" type="text"  placeholder="Tên của bạn">
                </div>
                <div class="form-group form-input-register">
                  <label for="exampleInputEmail1">Địa chỉ email</label>
                  <input class="form-control" id="exampleInputEmail1" name="email" required onchange="changeRegisterEmail(this)" type="email" aria-describedby="emailHelp" placeholder="Nhập email">
                  <div class="checkEmail"></div>
                </div>
                <div class="form-group">
                  <div class="form-row">
                    <div class="col-md-6">
                      <label for="exampleInputPassword1">Mật khẩu</label>
                      <input class="form-control" id="exampleInputPassword1" name="password" required type="password" placeholder="Mật khẩu của bạn">
                    </div>
                    <div class="col-md-6">
                      <label for="exampleConfirmPassword">Nhập lại mật khẩu</label>
                      <input class="form-control" id="exampleConfirmPassword" name="reqpassword" required type="password" placeholder="Nhập lại mật khẩu">
                    </div>
                  </div>
                </div>
                <!-- disabled -->
                <% if(message.status){ %>
                  <div class="checkResult text-center" style="color:green;font-family:'Times New Roman', Times, serif;"><%=message.text%></div>
                <%}else{%>
                  <div class="checkResult text-center" style="color:firebrick;font-family:'Times New Roman', Times, serif;"><%=message.text%></div>
                <%}%>
                <button type="submit" class="btn btn-primary btn-block">Đăng Ký</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.container-fluid-->
    <!-- /.content-wrapper-->
 <% include footer%>